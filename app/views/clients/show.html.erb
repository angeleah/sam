<%= link_to "Back to all clients", clients_path %>
<%= link_to "Add a client", new_client_path %>
<h1>
	<%= @client.first_name %>
	<%= @client.last_name %>
</h1>
<div class="actions">
	<%= link_to "Add Note", new_client_note_path(@client) %>
	<%= link_to "Edit Client", edit_client_path %>
	<%= link_to "Delete Client", { :action => :destroy, :id => @client.id }, :method => :delete, :confirm => 'Are you sure?' %>
</div>
<ul class="notes">
	<% @client.notes.each do |note| %>
		<li><%= note.note %></li>
		<%= link_to "Show note", client_note_path(@client, note)%>
	<% end %>
</ul>
