<%= render 'shared/back_to_all_clients' %>
<h1>
	<%= @client.first_name %>
	<%= @client.last_name %>
</h1>
<div class="actions">
	<%= render 'shared/shared_links' %>
	<%= link_to "back to all Notes", client_path(@client)%>
</div>
<div class="notes">
	<%= @note.note %>
</div>
<div class="actions">
	<%= link_to "Edit Note", edit_client_note_path(@client) %>
	<%= link_to "Delete Note", { :action => :destroy, :id => @note.id }, :method => :delete, :confirm => 'Are you sure?' %>
</div>